<body>
  <div class="fade-in">
    <a href="/users">Back</a><br><br>
    <% if (usertrue) { %>
      <a href="/users/<%=user.id%>/newlist"><i class="font">&#xE807</i> Playlist</a>
    <% } %>
    <% for (var i=0; i < user.playlist.length; i++) { %>
      <div class="playlist-header">
        <li><h3 class="user-playlist"><%= user.playlist[i].playlist_name %></h3></li>
        <li><a class="view-user-playlist" href="/users/<%=user.id%>/<%=user.playlist[i].id%>">View</a><li>
      </div>
      <table>
        <tr>
          <td>Song Title</td>
          <td>Artist</td>
        </tr>
        <% for (var j=0; j < user.playlist[i].music.length; j++) { %>
          <tr>
            <td><%= user.playlist[i].music[j].song_title %></td>
            <td><%= user.playlist[i].music[j].artist %></td>
          </tr>
        <% } %>
      </table>
    <% } %>
  </div>
