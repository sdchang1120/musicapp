<body>
  <a href="/users/<%=user.id%>">Back</a><br>

  <div class="playlist-header">
    <li><h3><%=playlist.playlist_name%></h3></li>
    <li><a href="/users/<%=user.id%>/<%=playlist.id%>/editlist"><i class="font">&#xE800</i></a></li>
  </div>
